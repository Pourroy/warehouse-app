<h1>Novo Galpão</h1>
<% if @warehouse.errors.any? %>
  <span>Verifique os campos abaixo:</span>
  <ul>
  <% @warehouse.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: @warehouse) do |form| %>
  <div>
    <%= form.label :nome %>
    <%= form.text_field(:nome) %>
  </div>
  <div>
    <%= form.label :code %>
    <%= form.text_field(:code) %>
  </div>
  <div>
    <%= form.label :description, 'Descrição' %>
    <%= form.text_area(:description) %>
  </div>
  <div>
    <%= form.label :adress %>
    <%= form.text_field(:adress) %>
  </div>
  <div>
    <%= form.label :city %>
    <%= form.text_field(:city) %>
  </div>
  <div>
    <%= form.label :state %>
    <%= form.text_field(:state) %>
  </div>
  <div>
    <%= form.label :postal_code %>
    <%= form.text_field(:postal_code) %>
  </div>
  <div>
    <%= form.label :total_area %>
    <%= form.number_field(:total_area) %>
  </div>
  <div>
    <%= form.label :useful_area %>
    <%= form.number_field(:useful_area) %>
  </div>
  <%= form.submit 'Gravar' %>
<% end %>
