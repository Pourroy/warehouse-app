
<h1>WareHouse App</h1>
<h3>Boas vindas ao sistema de gestão de estoques</h3>

<h1> Pesquise seu Galpão: </h1>
<%= form_with url: search_path, method: :get do %>
  <%= label_tag :q, 'Busca:' %>
  <%= text_field_tag :q %>
  <%= submit_tag 'Pesquisar' %>
<% end %>

<h2>Galpões Cadastrados</h2>
<% @warehouses.each do |w| %>
 <div id='<%=w.code%>'> <%= link_to(w.name, warehouse_path(w.id))%>
  <%= w.code %>
  <% if user_signed_in? %><%= link_to 'Editar', edit_warehouse_path(w) %>
  <%= button_to 'Delete', warehouse_path(w.id), method: :delete %>
  <%end%></div>
<% end %>
